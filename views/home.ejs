<!DOCTYPE html>
<html lang="pt-br">
<%- include ("partials/head") %>
<body>
    <%- include ("partials/header") %>
    <main>
        <section>
            <h1 style="color:rgb(98, 98, 230);text-align: center;"> Perguntas </h1><br>
            <% if( !perguntas.length){ %>
                <h1 style="text-align: center; font-size: small;"> Ainda não há perguntas</h1> 
            <% } %> 

            <% perguntas.forEach((el)=>{ %>
                <div class="card">
                    <h4>Titulo: </h4>
                    <div class="campo"><%= el.titulo %></div> <br>
                    <h4>Descricao: </h4>
                    <div class="campo campo2"><%= el.descricao %></div><br>
                </div><br>  
                <button><a href="/pergunta/<%= el.id %>">Responder</a></button><br><br><hr><br>
            <% }) %>
        </section>
    </main>
    <%- include ("partials/footer") %>
<script src="/js/script.js"></script>
</body>
</html>